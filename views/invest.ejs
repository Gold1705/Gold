    <!-- JavaScript - MODIFIÉ POUR LA ROBUSTESSE -->
    <script>
        function redirectToPayment(title, price, durationDays, returnAmount) {
            // On s'assure que durationDays est bien un nombre pour éviter des erreurs plus tard
            const duration = parseInt(durationDays, 10);
            
            // On construit l'URL avec les paramètres encodés pour éviter les caractères spéciaux
            const paymentUrl = `payment?title=${encodeURIComponent(title)}&price=${encodeURIComponent(price)}&duration=${encodeURIComponent(duration)}&return=${encodeURIComponent(returnAmount)}`;
            
            window.location.href = paymentUrl;
        }

        function goBack() {
            window.history.back();
        }
    </script>
    
